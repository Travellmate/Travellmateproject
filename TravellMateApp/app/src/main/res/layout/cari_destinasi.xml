<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.admintravellmate.travellmateapp.MainActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:background="#d70d0d0d"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/panah" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:gravity="center"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView1"
            android:textSize="35sp"
            android:textColor="#4d94eb"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:text="TravellMate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout1"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d7fdfcfb"
        android:gravity="top"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_weight="1"
            android:background="#b7b9b7b5"
            android:labelFor="@+id/autoCompleteTextView2"
            android:text="Cari Destinasi..." />

        <Button
            android:id="@+id/buttonCari"
            android:layout_width="182dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="#476bc8"
            android:text="Cari"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:background="#d7ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d7ffffff"
            android:paddingLeft="20dp"
            android:text="Hasil Pencarian Untuk 'Seoul'"
            android:textColor="#d70a0a0a"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_below="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#d7e2e1e1"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/seoul" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout4"
        android:layout_centerHorizontal="true"
        android:background="#d7e2e1e1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Seoul (South Korea)"
            android:textAlignment="center"
            android:textColor="#090a0a"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout5"
        android:background="#d7e2e1e1"
        android:gravity="top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonKunjungi2"
            android:layout_width="182dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="#476bc8"
            android:text="Kunjungi Sekarang!"
            android:textColor="@android:color/white"
            android:textSize="9sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#d70d0d0d"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="Travell Mate Â© 2017 All Rights Reserved."
            android:textColor="#f9fafc"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>