<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="id.admintravellmate.travellmateapp.MainActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:background="#d70d0d0d"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/panah" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:gravity="center"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView1"
            android:textSize="35sp"
            android:textColor="#4d94eb"
            android:layout_width="210dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:text="TravellMate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout1"
        android:layout_height="180dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@drawable/tentang" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout2"
        android:layout_height="125dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="TravellMate adalah aplikasi untuk menemukan teman travelling dengan tujuan yang sama dengan berbasis android atau mobile.
Di TravellMate kita bisa bergabung kedalam grup chat untuk menentukan destinasi travelling,
menentukan jadwal dan tentunya menemukan teman travelling dengan tujuan yang sama." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout3"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="KONTAK KAMI" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout4"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="Head Office : Samarinda, Indonesia" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout5"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="Phone : 081-251702779" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout7"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout6"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="WhatsApp : +6281251702779" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout8"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout7"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="Line Official : @travellmate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout9"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout8"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="Instagram : @travellmate_id" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout10"
        android:layout_width="match_parent"
        android:layout_below="@+id/layout9"
        android:layout_height="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#525050"
        android:gravity="top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:textColor="#ffffff"
            android:text="Email : admin@travellmate.id" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout11"
        android:background="#d70d0d0d"
        android:layout_below="@+id/layout10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:id="@+id/textView10"
            android:textSize="15sp"
            android:textColor="#f9fafc"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="Travell Mate Â© 2017 All Rights Reserved." />
    </LinearLayout>

</RelativeLayout>